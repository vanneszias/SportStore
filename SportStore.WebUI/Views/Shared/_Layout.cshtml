<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportStore.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-papm6K1Q6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q1+6Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/sportstore.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportStore.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sport-navbar">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="sportstore-logo me-2"><i class="fa-solid fa-dumbbell"></i></span>
                    <span class="fw-bold">SportStore</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index"><i class="fa-solid fa-list"></i> Catalog</a>
                        </li>
                        <li class="nav-item">
                            @if (User.HasClaim("CanManageCatalog", "true"))
                            {
                                <a class="nav-link text-white" asp-controller="Product" asp-action="Create"><i class="fa-solid fa-plus"></i> Add Product</a>
                            }
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <a class="btn btn-outline-light me-3" asp-controller="Cart" asp-action="Index">
                            <i class="fa-solid fa-cart-shopping"></i> Cart
                        </a>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container sport-main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="sport-footer mt-5">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-3">
            <div>
                <span class="sportstore-logo me-2"><i class="fa-solid fa-dumbbell"></i></span>
                <span>&copy; 2025 SportStore</span>
            </div>
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white me-3">Privacy</a>
                <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white me-2"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
