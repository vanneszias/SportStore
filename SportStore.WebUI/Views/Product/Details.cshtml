@model SportStore.Domain.Entities.Product
@{
    ViewData["Title"] = Model.Name;
}
<div class="row mt-4">
    <div class="col-md-5 d-flex align-items-center justify-content-center">
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" alt="@Model.Name" class="img-fluid" style="max-height:300px;object-fit:contain;" />
        }
        else
        {
            <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="width:300px;height:300px;">
                <span class="text-muted">No Image</span>
            </div>
        }
    </div>
    <div class="col-md-7">
        <h2>@Model.Name</h2>
        <p class="h4 text-muted">@Model.Price.ToString("C")</p>
        <p><span class="badge bg-secondary">@Model.Category?.Name</span></p>
        <form asp-controller="Cart" asp-action="Add" method="post" class="mb-3">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="input-group mb-2" style="max-width: 200px;">
                <input type="number" name="quantity" value="1" min="1" class="form-control" />
                <button type="submit" class="btn btn-success">Add to Cart</button>
            </div>
        </form>
        <hr />
        <p>@Model.Description</p>
    </div>
</div> 