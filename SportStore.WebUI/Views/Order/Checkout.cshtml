@model SportStore.WebUI.Models.OrderViewModel
@{
    ViewData["Title"] = "Checkout";
}
<h1 class="mb-4 fw-bold" style="color:#0a8754"><i class="fa-solid fa-truck-fast me-2"></i>Checkout</h1>
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="sport-card card p-4">
            <form asp-action="Checkout" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="DeliveryName" class="form-label"></label>
                    <input asp-for="DeliveryName" class="form-control" />
                    <span asp-validation-for="DeliveryName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DeliveryAddress" class="form-label"></label>
                    <input asp-for="DeliveryAddress" class="form-control" />
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DeliveryCity" class="form-label"></label>
                    <input asp-for="DeliveryCity" class="form-control" />
                    <span asp-validation-for="DeliveryCity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DeliveryPostalCode" class="form-label"></label>
                    <input asp-for="DeliveryPostalCode" class="form-control" />
                    <span asp-validation-for="DeliveryPostalCode" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="sport-card-btn btn btn-lg"><i class="fa-solid fa-check"></i> Place Order</button>
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary btn-lg"><i class="fa-solid fa-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 